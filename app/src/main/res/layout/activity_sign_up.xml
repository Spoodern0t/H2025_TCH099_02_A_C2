<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:importantForAutofill="no"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".vues.SignUpActivity"
    android:background="@color/couleur_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:contentDescription="@string/hint_logo"
        android:src="@drawable/logo_icon"
        android:layout_marginVertical="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/couleur_texte"
        android:text="@string/inscrivez_vous"
        android:layout_marginVertical="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="@string/adresse_courriel"
        app:boxBackgroundColor="@color/couleur_primaire"
        app:hintTextColor="@color/couleur_texte"
        android:textColorHint="@color/couleur_texte"
        app:boxStrokeColor="@color/couleur_texte">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmailSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/couleur_texte"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="@string/nom_utilisateur"
        app:boxBackgroundColor="@color/couleur_primaire"
        app:hintTextColor="@color/couleur_texte"
        android:textColorHint="@color/couleur_texte"
        app:boxStrokeColor="@color/couleur_texte">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/couleur_texte"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="@string/mot_de_passe"
        app:boxBackgroundColor="@color/couleur_primaire"
        app:hintTextColor="@color/couleur_texte"
        android:textColorHint="@color/couleur_texte"
        app:boxStrokeColor="@color/couleur_texte"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/couleur_texte"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="@string/confirmer_le_mot_de_passe"
        app:boxBackgroundColor="@color/couleur_primaire"
        app:counterOverflowTextColor="@color/couleur_texte"
        app:hintTextColor="@color/couleur_texte"
        android:textColorHint="@color/couleur_texte"
        app:boxStrokeColor="@color/couleur_texte"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/couleur_texte"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inscrire"
        android:minHeight="48dp"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/couleur_bouton" />

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deja_inscrit_se_connecter"
        android:textSize="18sp"
        android:textColor="@color/couleur_bouton"
        android:layout_marginTop="16dp" />

</LinearLayout>

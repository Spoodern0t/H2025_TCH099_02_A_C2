<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:background="@android:color/transparent"
        android:paddingHorizontal="15dp"
        android:paddingVertical="7dp">


        <ImageButton
            android:id="@+id/imgBtnCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/menu_de_creation"
            android:scaleType="fitStart"
            app:srcCompat="@android:drawable/ic_menu_more" />

        <ImageButton
            android:id="@+id/imgBtnLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/hint_logo"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <ImageButton
            android:id="@+id/imgBtnPhotoProfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/hint_photo_de_profil"
            android:scaleType="fitEnd"
            android:src="@android:drawable/ic_dialog_info"
            tools:srcCompat="@android:drawable/ic_dialog_info" />

    </LinearLayout>


    <me.jlurena.revolvingweekview.WeekView
        android:id="@+id/revolving_weekview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@android:color/white"
        app:hourHeight="60dp"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="#8f000000"
        app:headerRowPadding="12dp"
        app:noOfVisibleDays="3"
        app:dayBackgroundColor="#05000000"
        app:todayBackgroundColor="#1848adff"
        app:headerRowBackgroundColor="@android:color/transparent"
        app:headerColumnBackground="@android:color/transparent"
        android:layout_weight="0.5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="@color/design_default_color_secondary"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">

        <ImageButton
            android:id="@+id/imgBtnMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/hint_menu"
            android:scaleType="fitStart"
            tools:srcCompat="@android:drawable/ic_menu_agenda" />

        <ImageButton
            android:id="@+id/imgBtnPlanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/aller_au_plannificateur"
            android:scaleType="fitEnd"
            tools:srcCompat="@android:drawable/ic_menu_agenda" />

    </LinearLayout>

</LinearLayout>